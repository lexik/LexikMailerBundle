{
    "name": "lexik/mailer-bundle",
    "type": "symfony-bundle",
    "description": "This bundle allow you to manage some HTML email templates stored in your database. Templates are written with Twig and use I18N.",
    "keywords": ["Symfony2", "bundle", "mail", "mailer"],
    "homepage": "https://github.com/lexik/LexikMailerBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Laurent Heurtault",
            "email": "l.heurtault@lexik.fr"
        },
        {
            "name": "Yoann Aparici",
            "email": "y.aparici@lexik.fr"
        },
        {
            "name": "Dev Lexik",
            "email": "dev@lexik.fr"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/framework-bundle": "~2.1",
        "symfony/icu": ">=1.1",
        "swiftmailer/swiftmailer": ">=4.1.3",
        "doctrine/orm": "~2.2",
        "twig/twig": ">=1.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "doctrine/doctrine-fixtures-bundle": "~2.2"
    },
    "autoload":     {
        "psr-0": { "Lexik\\Bundle\\MailerBundle": "" }
    },
    "target-dir": "Lexik/Bundle/MailerBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        }
    }
}
